#!/bin/bash
#SBATCH --job-name=ospm
#SBATCH --output=logs/%x_%j.out
#SBATCH --error=logs/%x_%j.err
#SBATCH --time=12:00:00
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=8
#SBATCH --mem=32G

set -euo pipefail

REPO_ROOT="$HOME/Nates-OSPM"
WHICH_GAL_FILE="$REPO_ROOT/which_galaxy"

if [[ ! -f "$WHICH_GAL_FILE" ]]; then
    echo "[FATAL] which_galaxy not found at $WHICH_GAL_FILE"
    exit 1
fi

GALAXY=$(tr -d '[:space:]' < "$WHICH_GAL_FILE")

if [[ -z "$GALAXY" ]]; then
    echo "[FATAL] which_galaxy is empty"
    exit 1
fi

echo "[INFO] SLURM running galaxy: $GALAXY"

cd "$REPO_ROOT"

bash utils/start
